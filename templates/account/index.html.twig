{% extends 'base.html.twig' %}
{% block title %}Mon compte{% endblock %}
{% block body %}
<h1 class="mb-3">Mon compte</h1>

<div class="card">
  <div class="card-body">
    <dl class="row mb-0">
      <dt class="col-sm-3">Nom</dt>
      <dd class="col-sm-9">{{ app.user.name ?? '—' }}</dd>

      <dt class="col-sm-3">Email</dt>
      <dd class="col-sm-9">{{ app.user.email }}</dd>

      <dt class="col-sm-3">Rôles</dt>
      <dd class="col-sm-9">{{ app.user.roles ? app.user.roles|join(', ') : '—' }}</dd>
    </dl>
  </div>
</div>

<div class="d-flex gap-2 mt-3">
  <a class="btn btn-primary" href="{{ path('app_account_update') }}">Modifier mon profil</a>
  <a class="btn btn-outline-secondary" href="{{ path('app_account_password') }}">Changer mon mot de passe</a>
</div>
{% endblock %}

