{% extends 'base.html.twig' %}
{% block title %}Traitement commande {{ o.external_order_id ?? o.id }}{% endblock %}

{% block body %}
<!-- suppress HtmlFormInputWithoutLabel -->
<style>
  .status-badge{
    display:inline-block; font-size:.75rem; font-weight:600; line-height:1;
    padding:.30em .55em; border-radius:.35rem; border:1px solid transparent;
    white-space:nowrap; user-select:none;
  }
  .status-unknown{ background:#e2e3e5; color:#41464b; border-color:#d3d6d8; }   /* — */
  .status-draft{   background:#eef1f4; color:#495057; border-color:#d0d7de; }   /* Brouillon */
  .status-processing{ background:#fff3cd; color:#664d03; border-color:#ffecb5; } /* En attente / Confirmé */
  .status-ready{      background:#cfe2ff; color:#084298; border-color:#9ec5fe; } /* Prêt */
  .status-done{    background:#d1e7dd; color:#0f5132; border-color:#badbcc; }   /* Terminé */
  .status-cancel{  background:#f8d7da; color:#842029; border-color:#f5c2c7; }   /* Annulé */

  /* Cartes Logistique & Adresse: optimisations tablette */
  .logistics-card .item { margin-bottom:.35rem; }
  .addr-card .form-label { margin-bottom:.25rem; }
  @media (max-width: 991.98px) { /* < lg => tablettes */
    .addr-card .form-control,
    .addr-card .form-select { font-size:.95rem; }
    .logistics-card code { font-size:.9em; }
  }
</style>

{# Mapping FR + classes pour états Odoo des pickings #}
{% set pickingLabelMap = {
  'draft':'Brouillon',
  'waiting':'En attente',
  'confirmed':'En attente',
  'assigned':'Prêt',
  'ready':'Prêt',
  'done':'Terminé',
  'cancel':'Annulé'
} %}
{% set pickingClassMap = {
  'draft':'status-draft',
  'waiting':'status-processing',
  'confirmed':'status-processing',
  'assigned':'status-ready',
  'ready':'status-ready',
  'done':'status-done',
  'cancel':'status-cancel'
} %}

    <div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    {% if prev_id %}
      <a class="btn btn-outline-secondary btn-sm"
         href="{{ path('admin_orders_process', (list_query|default({})) | merge({'id': prev_id})) }}">← Précédente</a>
    {% else %}
      <span></span>
    {% endif %}

    {% if next_id %}
      <a class="btn btn-outline-secondary btn-sm"
         href="{{ path('admin_orders_process', (list_query|default({})) | merge({'id': next_id})) }}">Suivante →</a>
    {% else %}
      <span></span>
    {% endif %}
  </div>

  <h1 class="h4 mb-1">Traitement commande {{ o.external_order_id|default(o.id) }}</h1>

  <div class="card mb-3 logistics-card">
    <div class="card-body py-2">
      {% if odoo_state %}
        <div class="item">État Odoo : <strong>{{ odoo_state }}</strong></div>
      {% endif %}

      {% if picking is not null %}
        {% set pState = (picking.picking.state|default(''))|lower %}
        {% set pLbl = pickingLabelMap[pState]|default((picking.picking.state ?? '—')) %}
        {% set pCls = pickingClassMap[pState]|default('status-unknown') %}
        <div class="item">
          BL courant: <code>{{ picking.picking.name ?? ('#' ~ picking.picking.id) }}</code>
          · État: <span class="status-badge {{ pCls }}">{{ pLbl }}</span>
          · Prévu: {{ picking.picking.scheduled_date ?? 'n/a' }}
        </div>
      {% endif %}

      {% if pickings is defined and pickings %}
        <div class="item">
          Autres BL:
          {% for p in pickings %}
            <code>{{ p.name }}</code>{% if not loop.last %} {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

  {% set locked = meta.picking_validated_at is defined and meta.picking_validated_at is not null %}
  {% set isConfirmed = odoo_state in ['sale','done'] %}
  {% set isCanceled  = odoo_state == 'cancel' %}
  {% set disableConfirm = locked or isConfirmed or isCanceled %}
  {% set disableCancel  = locked or isCanceled %}

  {% set pickingState = picking ? (picking.picking.state|default('')) : '' %}
  {% set pickingClosed = pickingState in ['done','cancel'] %}
  {% set disablePrep = locked or pickingClosed %}

  <div class="mb-1 d-flex flex-wrap align-items-center gap-2">
    <form method="post" action="{{ path('admin_odoo_refresh_lines', {'id': o.id}) }}" class="d-inline">
      <input type="hidden" name="_token" value="{{ csrf_token('odoo_refresh_' ~ o.id) }}">
      <button class="btn btn-outline-primary btn-sm" {{ locked ? 'disabled' : '' }}>Mettre à jour</button>
    </form>
    <span class="text-muted" aria-hidden="true">→</span>
    <form method="post" action="{{ path('admin_odoo_confirm_order', {'id': o.id}) }}" class="d-inline">
      <input type="hidden" name="_token" value="{{ csrf_token('odoo_confirm_' ~ o.id) }}">
      <button class="btn btn-success btn-sm" {{ disableConfirm ? 'disabled' : '' }}>Confirmer Odoo</button>
    </form>
    <span class="text-muted" aria-hidden="true">→</span>
    <a class="btn btn-outline-secondary btn-sm" href="{{ path('admin_orders_picking_pdf', {'id': o.id}) }}" target="_blank" rel="noopener noreferrer">Bon de préparation</a>
    <span class="text-muted" aria-hidden="true">→</span>
    <a class="btn btn-outline-secondary btn-sm" href="{{ path('admin_orders_delivery_pdf', {'id': o.id}) }}" target="_blank" rel="noopener noreferrer">Bon de livraison</a>
    <span class="text-muted" aria-hidden="true">→</span>
    <form method="post" action="{{ path('admin_orders_bpost_generate', {'id': o.id}) }}" class="d-inline">
      <input type="hidden" name="_token" value="{{ csrf_token('bpost_generate_' ~ o.id) }}">
      <button class="btn btn-success btn-sm" {{ locked ? 'disabled' : '' }}>Générer via bpost</button>
    </form>
    <span class="text-muted" aria-hidden="true">→</span>
    <a class="btn btn-outline-primary btn-sm" href="{{ path('admin_orders_carrier_label_pdf', {'id': o.id}) }}" target="_blank" rel="noopener noreferrer">Label de livraison</a>

    <div class="ms-auto d-flex align-items-center gap-2">
      <div class="form-check me-2">
        <input class="form-check-input" type="checkbox" id="create_backorder" name="create_backorder" value="1" form="push-form" checked>
        <label class="form-check-label" for="create_backorder">Créer un reliquat (traiter plus tard)</label>
      </div>
      <button type="submit" class="btn btn-primary btn-sm"
              form="push-form" {{ disablePrep ? 'disabled' : '' }}>
        Valider la préparation (Odoo)
      </button>
    </div>
  </div>

  <div class="mb-3">
    <a class="btn btn-outline-secondary btn-sm" href="{{ path('admin_orders_show', {'id': o.id}) }}">← Retour fiche</a>
  </div>

  {% if locked %}
    <div class="alert alert-success py-2">
      Bon de livraison validé le {{ meta.picking_validated_at|date('Y-m-d H:i') }}.
      Champs de préparation verrouillés.
    </div>
  {% endif %}

  <form method="post">
    <div class="row g-3">
      <div class="col-md-3">
        <label class="form-label">Nombre de colis</label>
        <input type="number" min="1" class="form-control" name="parcels_count" value="{{ meta.parcels_count|default(1) }}" {{ locked ? 'disabled' : '' }}>
      </div>
      <div class="col-md-3">
        <label class="form-label">Réf colis</label>
        <input type="text" class="form-control" name="package_ref" value="{{ meta.package_ref|default('') }}" {{ locked ? 'disabled' : '' }}>
      </div>
      <div class="col-md-6">
        <label class="form-label">Préparateur</label>
        <select class="form-select" name="prepared_by" {{ locked ? 'disabled' : '' }}>
          {% set current = meta.prepared_by|default(app.user.userIdentifier) %}
          {% set hasCurrent = false %}
          {% for u in users %}
            {% set value = u.value is defined and u.value is not null ? u.value : (u.label is defined ? u.label : '') %}
            {% set label = u.label is defined ? u.label : value %}
            <option value="{{ value }}" {{ value == current ? 'selected' : '' }}>{{ label }}</option>
            {% if value == current %}{% set hasCurrent = true %}{% endif %}
          {% endfor %}
          {% if users is empty or (not hasCurrent and current) %}
            <option value="{{ current }}" selected>{{ current }}</option>
          {% endif %}
        </select>
      </div>

      <div class="col-md-4">
        <label class="form-label">Transporteur</label>
        {% set carrier = o.shipping_carrier|default(meta.shipping_carrier_override|default('')) %}
        <select name="shipping_carrier" class="form-select" {{ locked ? 'disabled' : '' }}>
          <option value="" {{ carrier=='' ? 'selected' : '' }}>—</option>
          <option value="bpost" {{ carrier=='bpost' ? 'selected' : '' }}>Bpost</option>
          <option value="pickup" {{ carrier=='pickup' ? 'selected' : '' }}>Pickup</option>
        </select>
      </div>
      <div class="col-md-4">
        <label class="form-label">Service</label>
        <input type="text" class="form-control" name="shipping_service" value="{{ o.shipping_service|default(meta.shipping_service_override|default('')) }}" {{ locked ? 'disabled' : '' }}>
      </div>
      <div class="col-md-4">
        <label class="form-label">Tracking</label>
        <input type="text" class="form-control" name="tracking_number" value="{{ o.tracking_number }}" {{ locked ? 'disabled' : '' }}>
      </div>
    </div>

    <hr class="my-4">

    <div class="card addr-card">
      <div class="card-body">
        <h2 class="h6">Adresse d’expédition</h2>
        <div class="row g-3">
          <div class="col-lg-6">
            <label class="form-label">Nom</label>
            <input type="text" class="form-control" name="ship_name" value="{{ ship.name }}" {{ locked ? 'disabled' : '' }}>
          </div>
          <div class="col-lg-6">
            <label class="form-label">Téléphone</label>
            <input type="text" class="form-control" name="ship_phone" value="{{ ship.phone }}" {{ locked ? 'disabled' : '' }}>
          </div>
          <div class="col-lg-8">
            <label class="form-label">Adresse 1</label>
            <input type="text" class="form-control" name="ship_address1" value="{{ ship.address1 }}" {{ locked ? 'disabled' : '' }}>
          </div>
          <div class="col-lg-4">
            <label class="form-label">Adresse 2</label>
            <input type="text" class="form-control" name="ship_address2" value="{{ ship.address2 }}" {{ locked ? 'disabled' : '' }}>
          </div>
          <div class="col-lg-3">
            <label class="form-label">CP</label>
            <input type="text" class="form-control" name="ship_postcode" value="{{ ship.postcode }}" {{ locked ? 'disabled' : '' }}>
          </div>
          <div class="col-lg-5">
            <label class="form-label">Ville</label>
            <input type="text" class="form-control" name="ship_city" value="{{ ship.city }}" {{ locked ? 'disabled' : '' }}>
          </div>
          <div class="col-lg-4">
            <label class="form-label">Pays (ISO2)</label>
            <input type="text" class="form-control" name="ship_country" value="{{ ship.country }}" {{ locked ? 'disabled' : '' }}>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-3">
      <button class="btn btn-outline-secondary" {{ locked ? 'disabled' : '' }}>Enregistrer</button>
      <a class="btn btn-link" href="{{ path('admin_orders_show', {'id': o.id}) }}">Annuler</a>
    </div>
  </form>

  <hr class="my-4">

  {% if all_pickings is defined and all_pickings %}
    <h2 class="h6">Bons de livraison et articles</h2>

    <form id="push-form" method="post" action="{{ path('admin_odoo_push_validate', {'id': o.id}) }}">
      <input type="hidden" name="_token" value="{{ csrf_token('odoo_pushval_' ~ o.id) }}">

      {% for ap in all_pickings %}
        <div class="mb-2 text-muted small">
          {% set s = (ap.picking.state|default(''))|lower %}
          {% set sLbl = pickingLabelMap[s]|default((ap.picking.state|default('—'))) %}
          {% set sCls = pickingClassMap[s]|default('status-unknown') %}
          Bon de livraison: <code>{{ ap.picking.name }}</code>
          · État: <span class="status-badge {{ sCls }}">{{ sLbl }}</span>
          · Prévu: {{ ap.picking.scheduled_date|default('n/a') }}
        </div>

        <div class="table-responsive mb-3">
          <table class="table table-sm align-middle">
            <thead>
              <tr>
                <th style="width:14%;">Barcode</th>
                <th style="width:14%;">Référence interne</th>
                <th>Nom</th>
                <th class="text-end" style="width:10%;">Qty commandé</th>
                <th class="text-end" style="width:10%;">Qty à préparer</th>
                <th class="text-center" style="width:8%;">Picked ?</th>
                <th class="text-end" style="width:10%;">Stock dispo</th>
                <th>Stock Emplacement</th>
                <th class="text-end" style="width:14%;">Qté préparée</th>
              </tr>
            </thead>
            <tbody>
            {% for pl in ap.lines %}
              {% set pid = pl.product_id|default(null) %}
              {% set info = (pid and products_info_by_pid is defined and products_info_by_pid[pid] is defined) ? products_info_by_pid[pid] : null %}
              {% set local = (pid and local_lines_by_pid is defined and local_lines_by_pid[pid] is defined) ? local_lines_by_pid[pid] : null %}
              {% set localId = local ? local.id : null %}
              <tr>
                <td><code>{{ pl.barcode ?? (info and info.barcode ? info.barcode : (local and local.sku ? local.sku : '—')) }}</code></td>
                <td><code>{{ pl.default_code ?? (info and info.default_code ? info.default_code : '—') }}</code></td>
                <td>
                  {{ pl.product_label ?? (local and local.name ? local.name : '') }}
                  {% set uomTxt = pl.product_uom ?? (info and info.uom ? info.uom : '') %}
                  {% if uomTxt %}<div class="text-muted small">{{ uomTxt }}</div>{% endif %}
                </td>
                <td class="text-end">
                  {{ pl.ordered_qty is not null
                       ? pl.ordered_qty
                       : (pid and so_lines_by_pid is defined and so_lines_by_pid[pid] is defined and so_lines_by_pid[pid].ordered_qty is defined
                          ? so_lines_by_pid[pid].ordered_qty
                          : '—') }}
                </td>
                <td class="text-end">{{ pl.product_uom_qty }}</td>
                <td class="text-center">
                  <input type="checkbox" disabled {{ pl.picked ? 'checked' : '' }}>
                </td>
                <td class="text-end">
                  {% if pl.on_hand is defined %}
                    {{ pl.on_hand }}
                  {% elseif info and info.qty_available is defined %}
                    {{ info.qty_available }}
                  {% else %}
                    —
                  {% endif %}
                </td>
                <td>
                  {% if pl.locations is defined and pl.locations %}
                    {% for loc in pl.locations %}
                      <div>{{ (loc.wh is defined and loc.wh) ? (loc.wh ~ ' · ') : '' }}{{ loc.name }}</div>
                    {% endfor %}
                  {% elseif info and info.locations is defined and info.locations %}
                    {% for loc in info.locations %}
                      <div>{{ (loc.wh is defined and loc.wh) ? (loc.wh ~ ' · ') : '' }}{{ loc.name }}</div>
                    {% endfor %}
                  {% else %}—{% endif %}
                </td>
                <td class="text-end" style="min-width:120px;">
                  {% set demanded = pl.product_uom_qty|default(0) %}
                  {% set already = pl.picked_qty|default(0) %}
                  {% set remaining = demanded - already %}
                  {% if remaining < 0 %}{% set remaining = 0 %}{% endif %}
                  <input type="number" step="0.01" min="0"
                         name="prepared[{{ localId is not null ? localId : '' }}]"
                         value="{{
                           (local and local.prepared_qty is not null)
                             ? local.prepared_qty
                             : ((ap.picking.state is defined and ap.picking.state in ['assigned','ready']) ? remaining : demanded)
                         }}"
                         class="form-control form-control-sm text-end"
                         {{ (disablePrep or (localId is null) or (ap.picking.state is defined and ap.picking.state in ['done','cancel'])) ? 'disabled' : '' }}>
                </td>
              </tr>
            {% else %}
              <tr><td colspan="9" class="text-center text-muted">Aucune ligne.</td></tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      {% endfor %}
    </form>
  {% endif %}


  {% if backorder_pickings is defined and backorder_pickings %}
    <hr class="my-4">
    <h2 class="h6">Articles encore à préparer</h2>

    {% for bp in backorder_pickings %}
      <div class="mb-2 text-muted small">
        {% set bs = (bp.picking.state|default(''))|lower %}
        {% set bsLbl = pickingLabelMap[bs]|default((bp.picking.state|default('—'))) %}
        {% set bsCls = pickingClassMap[bs]|default('status-unknown') %}
        Bon de livraison: <code>{{ bp.picking.name }}</code>
        · État: <span class="status-badge {{ bsCls }}">{{ bsLbl }}</span>
        · Prévu: {{ bp.picking.scheduled_date|default('n/a') }}
      </div>
      <div class="table-responsive mb-3">
        <table class="table table-sm align-middle">
          <thead>
            <tr>
              <th style="width:18%;">Bon de livraison</th>
              <th style="width:10%;">État</th>
              <th style="width:14%;">Barcode</th>
              <th style="width:14%;">Référence interne</th>
              <th>Nom</th>
              <th class="text-end" style="width:12%;">Quantité (BL)</th>
            </tr>
          </thead>
          <tbody>
          {% for pl in bp.lines %}
            <tr>
              <td><code>{{ bp.picking.name }}</code></td>
              {% set bts = (bp.picking.state|default(''))|lower %}
              {% set btsLbl = pickingLabelMap[bts]|default((bp.picking.state|default('—'))) %}
              {% set btsCls = pickingClassMap[bts]|default('status-unknown') %}
              <td><span class="status-badge {{ btsCls }}">{{ btsLbl }}</span></td>
              <td><code>{{ pl.barcode ?? '' }}</code></td>
              <td><code>{{ pl.default_code ?? '' }}</code></td>
              <td>{{ pl.product_label ?? '' }}{% if pl.product_uom %}<div class="text-muted small">{{ pl.product_uom }}</div>{% endif %}</td>
              <td class="text-end">{{ pl.product_uom_qty }}</td>
            </tr>
          {% else %}
            <tr><td colspan="6" class="text-muted text-center">Aucune ligne pour ce BL.</td></tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    {% endfor %}
  {% endif %}

  <div class="d-flex gap-2">
    <button type="submit"
            class="btn btn-outline-secondary btn-sm"
            form="push-form"
            formaction="{{ path('admin_orders_save_prep', {'id': o.id}) }}"
            {{ disablePrep ? 'disabled' : '' }}>
      Enregistrer la préparation
    </button>
  </div>
</div>
{% endblock %}

