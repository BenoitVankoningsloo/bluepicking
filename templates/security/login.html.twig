{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block body %}
<h1 class="mb-3">Connexion</h1>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body">
        {% if error %}
          <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
          <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" value="{{ last_username|default('') }}"
                   name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
          </div>

          <div class="mb-3">
            <label for="inputPassword" class="form-label">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
          </div>

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          <div class="mb-3">
            <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key|default('') }}"></div>
          </div>

          <div class="d-flex align-items-center justify-content-between">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on">
              <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
            </div>
            <button class="btn btn-primary">Se connecter</button>
          </div>
          <div class="text-center mt-3">
           <a class="link-secondary" href="{{ path('app_forgot_password_request') }}">
             Mot de passe oubli√© ?
          </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

